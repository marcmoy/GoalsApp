<h1>New user</h1>

<form action="/users" method="POST" >
  <input type="hidden"
    name="authenticity_token"
    value="<%=form_authenticity_token %>">

  <label>username</label>
    <input
      type="text"
      id="username"
      name="user[username]">

  <label>password</label>
    <input
      type="password"
      id="password"
      name="user[password]">

  <input type="submit" value="Create user">
</form>
